{
   "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
   "files": {
      "includes": ["src/**/*"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 120
   },
   "linter": {
      "enabled": true
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "double",
         "semicolons": "always"
      }
   }
}
